<div class="row">
    <div class="card col-md-7 col-sm-10 col-11 col-lg-5 mt-5 rounded p-0 mx-auto">
        <div class="card-header text-center ">
            <span class="h3">{{nameform}}</span>
        </div>
        <div class="card-body">
            <form method="POST">
                {{#if signup}}
                <div class="form-group">
                    <input type="text" class="form-control rounded" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control rounded" name="lastname" placeholder="Lastname">
                </div>
                {{/if}}
                <div class="form-group">
                    <input type="text" class="form-control rounded" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control rounded" name="password" placeholder="Password">
                </div>
                {{!-- <div class="form-group">
              <input type="text"
                class="form-control" name="name" placeholder="Name">
            </div> --}}
                <button type="submit" class="btn btn-block rounded btn-success shadow">{{textbutton}}</button>
            </form>
        </div>
    </div>
</div>
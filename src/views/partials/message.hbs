{{#if success}}
<div class="col-md-7 col-sm-10 col-11 col-lg-5 mx-auto mt-3">
    <div class="alert alert-success alert-dismissible fade rounded show mx-auto" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <strong>{{success}}</strong>
    </div>
</div>
{{/if}}

{{#if error}}
<div class="col-md-7 col-sm-10 col-11 col-lg-5 mx-auto mt-3">
    <div class="alert alert-danger alert-dismissible fade rounded show mx-auto" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <strong>{{error}}</strong>
    </div>
</div>
{{/if}}
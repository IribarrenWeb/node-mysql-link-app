<div class="mt-md-5 mt-2">
    {{#each links}}
    <table class="table table-hover table-bordered">
        <thead>
            <tr class="table-bordered font-weight-bold">
                <th scope="col">Name</th>
                <th scope="col">URL</th>
                <th scope="col">Description</th>
                <th scope="col" colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">{{name}}</th>
                <td>{{url}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="{{baseUrl}}links/restore/{{id}}"
                        class="btn btn-info btn-block btn-sm rounded-pill">Restore</a>
                </td>
                <td>
                    <a href="{{baseUrl}}links/destroy/{{id}}"
                        class="btn btn-danger btn-block btn-sm rounded-pill">Destroy</a>
                </td>
            </tr>
        </tbody>
    </table>
    {{else}}
    <div class="col-md-4 mx-auto">
        <div class="card rounded px-5 py-3">
            <p class="card-text text-center">
                There is no links in trash to list.
            </p>
            <a href="{{baseUrl}}links/add" class="btn btn-sm btn-block rounded shadow-sm btn-success">Create one</a>
        </div>
    </div>
    {{/each}}
</div>